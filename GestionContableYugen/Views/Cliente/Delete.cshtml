@model GestionContableYugen.ViewModels.ClienteViewModel

@{
    ViewData["Title"] = "Deshabilitar Cliente";
}

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="card p-4" style="width: 450px; border-radius: 10px; border: 1px solid #dee2e6;">
        <h3 class="text-center text-warning mb-3">Deshabilitar Cliente</h3>
        <p class="text-center">¿Estás seguro de que deseas deshabilitar este cliente?</p>

        <div class="form-group mb-2">
            <label class="fw-bold">Nombre:</label>
            <p class="form-control-static">@Model.NombreCliente</p>
        </div>

        <div class="form-group mb-2">
            <label class="fw-bold">Número de Cédula:</label>
            <p class="form-control-static">@Model.NumeroCedula</p>
        </div>

        <div class="form-group mb-2">
            <label class="fw-bold">Teléfono:</label>
            <p class="form-control-static">@Model.Telefono</p>
        </div>

        <div class="form-group mb-2">
            <label class="fw-bold">Correo Electrónico:</label>
            <p class="form-control-static">@Model.CorreoElectronico</p>
        </div>

        <div class="form-group mb-3">
            <label class="fw-bold">Dirección:</label>
            <p class="form-control-static">@Model.Direccion</p>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ClienteID" />
            <div class="d-flex justify-content-center gap-2">
                <button type="submit" class="btn btn-warning px-4">Deshabilitar</button>
                <a href="@Url.Action("Index", "Cliente")" class="btn btn-secondary px-4">Cancelar</a>
            </div>
        </form>
    </div>
</div>

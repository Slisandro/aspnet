@model GestionContableYugen.ViewModels.ClienteViewModel

@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="card p-4" style="width: 450px; border-radius: 10px; border: 1px solid #dee2e6;">
        <h3 class="text-center mb-4">Editar Cliente</h3>

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ClienteID" />

            <!-- Nombre -->
            <div class="form-group mb-3">
                <label class="fw-bold">Nombre</label>
                <input asp-for="NombreCliente" class="form-control" required />
                <span asp-validation-for="NombreCliente" class="text-danger"></span>
            </div>

            <!-- Número de Cédula -->
            <div class="form-group mb-3">
                <label class="fw-bold">Número de Cédula</label>
                <input asp-for="NumeroCedula" class="form-control" required />
                <span asp-validation-for="NumeroCedula" class="text-danger"></span>
            </div>

            <!-- Teléfono -->
            <div class="form-group mb-3">
                <label class="fw-bold">Teléfono</label>
                <input asp-for="Telefono" class="form-control" required />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <!-- Correo Electrónico -->
            <div class="form-group mb-3">
                <label class="fw-bold">Correo Electrónico</label>
                <input asp-for="CorreoElectronico" type="email" class="form-control" required />
                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
            </div>

            <!-- Dirección -->
            <div class="form-group mb-3">
                <label class="fw-bold">Dirección</label>
                <input asp-for="Direccion" class="form-control" required />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

            <!-- Estado (Activo/Inactivo) -->
            <div class="form-group mb-3 d-flex align-items-center">
                <input asp-for="Estado" class="form-check-input me-2" type="checkbox" />
                <label class="fw-bold">Cliente Activo</label>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <!-- Botones -->
            <div class="d-flex justify-content-center gap-2">
                <button type="submit" class="btn btn-primary px-4">Guardar Cambios</button>
                <a href="@Url.Action("Index", "Cliente")" class="btn btn-secondary px-4">Cancelar</a>
            </div>
        </form>
    </div>
</div>

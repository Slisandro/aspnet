@model GestionContableYugen.ViewModels.ProveedorViewModel

@{
    ViewData["Title"] = "Editar Proveedor";
}

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="card p-4" style="width: 450px; border-radius: 10px; border: 1px solid #dee2e6;">
        <h3 class="text-center mb-4">Editar Proveedor</h3>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="ProveedorID" />

            <div class="form-group mb-3">
                <label class="fw-bold">Nombre</label>
                <input asp-for="NombreProveedor" class="form-control" required />
                <span asp-validation-for="NombreProveedor" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="fw-bold">Número de Cédula</label>
                <input asp-for="NumeroCedula" class="form-control" required />
                <span asp-validation-for="NumeroCedula" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="fw-bold">Teléfono</label>
                <input asp-for="Telefono" class="form-control" required />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="fw-bold">Correo Electrónico</label>
                <input asp-for="CorreoElectronico" class="form-control" required />
                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="fw-bold">Dirección</label>
                <input asp-for="Direccion" class="form-control" required />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 d-flex align-items-center">
                <input asp-for="Estado" class="form-check-input me-2" type="checkbox" />
                <label class="fw-bold">Proveedor Activo</label>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-center gap-2">
                <button type="submit" class="btn btn-primary px-4">Guardar Cambios</button>
                <a asp-action="Index" class="btn btn-secondary px-4">Cancelar</a>
            </div>
        </form>
    </div>
</div>

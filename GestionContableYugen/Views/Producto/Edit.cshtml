@model GestionContableYugen.ViewModels.ProductoViewModel

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="card p-4" style="width: 450px; border-radius: 10px; border: 1px solid #dee2e6;">
        <h3 class="text-center mb-4">Editar Producto</h3>

        <form asp-action="Edit" method="post" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ProductoID" />

            <!-- Nombre del Producto -->
            <div class="form-group mb-3">
                <label class="fw-bold">Nombre del Producto</label>
                <input asp-for="NombreProducto" class="form-control" required>
                <span asp-validation-for="NombreProducto" class="text-danger"></span>
            </div>

            <!-- Código de Barras -->
            <div class="form-group mb-3">
                <label class="fw-bold">Código de Barras</label>
                <input asp-for="CodigoBarras" class="form-control" required readonly>
                <span asp-validation-for="CodigoBarras" class="text-danger"></span>
            </div>

            <!-- Precio -->
            <div class="form-group mb-3">
                <label class="fw-bold">Precio</label>
                <input asp-for="Precio" type="number" step="0.01" class="form-control" required>
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <!-- Cantidad Disponible -->
            <div class="form-group mb-3">
                <label class="fw-bold">Cantidad Disponible</label>
                <input asp-for="CantidadDisponible" type="number" class="form-control" required>
                <span asp-validation-for="CantidadDisponible" class="text-danger"></span>
            </div>

            <!-- Categoría -->
            <div class="form-group mb-3">
                <label class="fw-bold">Categoría</label>
                <input asp-for="Categoria" class="form-control" required>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>

            <!-- Descripción -->
            <div class="form-group mb-3">
                <label class="fw-bold">Descripción</label>
                <textarea asp-for="Descripcion" class="form-control"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <!-- Fecha de Ingreso -->
            <div class="form-group mb-3">
                <label class="fw-bold">Fecha de Ingreso</label>
                <input asp-for="FechaIngreso" type="date" class="form-control" required>
                <span asp-validation-for="FechaIngreso" class="text-danger"></span>
            </div>

            <!-- Demanda Diaria Promedio -->
            <div class="mb-3">
                <label class="form-label">Demanda Diaria Promedio:</label>
                <input asp-for="DemandaDiariaPromedio" class="form-control" type="number" min="0" required>
                <span asp-validation-for="DemandaDiariaPromedio" class="text-danger"></span>
            </div>

            <!-- Tiempo de Entrega del Proveedor -->
            <div class="mb-3">
                <label class="form-label">Tiempo de Entrega del Proveedor (días):</label>
                <input asp-for="TiempoEntregaProveedor" class="form-control" type="number" min="0" required>
                <span asp-validation-for="TiempoEntregaProveedor" class="text-danger"></span>
            </div>

            <!-- Stock de Seguridad -->
            <div class="mb-3">
                <label class="form-label">Stock de Seguridad:</label>
                <input asp-for="StockSeguridad" class="form-control" type="number" min="0" required>
                <span asp-validation-for="StockSeguridad" class="text-danger"></span>
            </div>

            <!-- Botones -->
            <div class="d-flex justify-content-center gap-2">
                <button type="submit" class="btn btn-primary px-4">Actualizar</button>
                <a asp-action="Index" class="btn btn-secondary px-4">Cancelar</a>
            </div>
        </form>
    </div>
</div>
